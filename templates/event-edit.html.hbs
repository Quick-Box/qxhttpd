{{#*inline "page"}}

    <div>
        <div class="w3-green">
            <h1 class="w3-margin">Edit event</h1>
        </div>
        <form class="w3-container" action="/event" method="post">
            {{#with event}}
                <p>ID: <b>{{id}}</b></p>
                <div class="w3-section">
                    <label><b>Name</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Enter event name" name="name" value="{{name}}" required>
                    <label><b>Place</b></label>
                    <input class="w3-input w3-border" type="text" placeholder="Enter event place" name="place" value="{{place}}" required>
                    <label><b>Date</b></label>
                    <input class="w3-input w3-border" type="datetime-local" placeholder="Enter event date" name="date" value="{{date}}" required>
                    <div class="w3-row w3-margin-top">
                        <button class="w3-button w3-round-large w3-green" type="submit">Save</button>
                        <a href="/" class="w3-button w3-round-large w3-red w3-right">Cancel</a>
                    </div>
                </div>
            {{/with}}
        </form>
    </div>

{{/inline}}
{{> layout}}
