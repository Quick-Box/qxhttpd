{{#*inline "page"}}

    <h2>Events</h2>
    <p>{{user_info}}</p>
    <div class="w3-container w3-light-grey">
        <button onclick="document.getElementById('event-dialog').style.display='block'" class="w3-button w3-green w3-round-large w3-right"><b>add event</b></button>
    </div>
<!--    <button onclick="document.getElementById('id01').style.display='block'" class="w3-button w3-green w3-large">Login</button>-->

    <div id="event-dialog" class="w3-modal">
        <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:600px">
            <div class="w3-green">
                <h3 class="w3-margin">Create event</h3>
            </div>
            <form class="w3-container" action="/event" method="post">
                <div class="w3-section">
                    <label><b>Name</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Enter event name" name="name" required>
                    <label><b>Place</b></label>
                    <input class="w3-input w3-border" type="text" placeholder="Enter event place" name="place" required>
                    <label><b>Date</b></label>
                    <input class="w3-input w3-border" type="datetime-local" placeholder="Enter event date" name="date" required>
                    <div class="w3-row w3-margin-top">
                        <button class="w3-button w3-round-large w3-green" type="submit">Create</button>
                        <button class="w3-button w3-round-large w3-red w3-right" type="button" onclick="document.getElementById('event-dialog').style.display='none'">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="w3-table-all w3-hoverable">
<!--        <tr>-->
<!--            <th>Name</th>-->
<!--            <th>Date</th>-->
<!--        </tr>-->
        {{#each events}}
            <tr>
                <td><a href="/event/{{ this.id }}">{{this.name}}</a></td>
                <td>{{this.place}}</td>
                <td>{{this.date}}</td>
            </tr>
        {{/each}}
    </table>

{{/inline}}
{{> layout}}
