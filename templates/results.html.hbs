{{#*inline "page"}}

    <h2>Results</h2>
    <h3><a href="/event/{{ event.id }}">{{ event.name }}</a></h3>

    <div>
    {{#each classes}}
        <a class="w3-button" href="/event/{{ ../event.id }}/results?class_name={{this.name}}">{{ this.name }}</a>
    {{/each}}
    </div>

    <div class="w3-bar w3-theme-l2">
        <span class="w3-bar-item"><b>{{classrec.name}}</b></span>
        <span class="w3-bar-item w3-right">controls: {{classrec.control_count}}</span>
        <span class="w3-bar-item w3-right">climb: {{classrec.climb}}</span>
        <span class="w3-bar-item w3-right">length: {{classrec.length}}</span>
    </div>

    <table id="table" class="w3-table-all w3-hoverable">
        <thead>
        <tr class="w3-theme-l1">
            <th class="start_time w3-right-align">Start</th>
            <th>Name</th>
            <th>Registration</th>
            <th>Check</th>
            <th class="finish_time w3-right-align">Finish</th>
            <th class="time w3-right-align">Time</th>
            <th>Status</th>
            <th>Run Id</th>
        </tr>
        </thead>
        <tbody>
        {{#each runs}}
            <tr>
                <td class="w3-right-align">{{ start_time }}</td>
                <td>{{ last_name }} {{ first_name }}</td>
                <td>{{ registration }}</td>
                <td>{{dtstr check_time }}</td>
                <td class="w3-right-align">{{ finish_time }}</td>
                <td class="w3-right-align"></td>
                <td>{{ status }}</td>
                <td class="w3-right-align">{{ run_id }}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <script src="/js/utils.js"></script>
    <script>
    formatRunTable('{{ start00 }}');
    </script>

{{/inline}}
{{> layout}}
